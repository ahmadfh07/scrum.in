  <div class="flex flex-col bg-[#DEE5D4] w-full h-screen">
    <!-- Bagian yang mirip Navbar -->
    <div class="flex flex-row w-full h-14 pt-3">
      <!-- Kiri -->
      <div class="flex flex-row w-4/5">
          <h1 class="pl-5 pt-2 text-lg font-medium">Dashboard</h1>
          <h1 class="pl-2 pt-2 text-lg font-medium">/</h1>
          <h1 class="pl-2 pt-2 text-lg font-light">Overview</h1>
      </div>
      <!-- Kanan / Profil-->
      <div class="flex flex-row w-1/5">
          <!-- Avatar -->
          <img class="flex h-9 w-9 my-auto mr-1" src="assets/user_avatar.png" alt="">
          <!-- Nama -->
          <div class="flex flex-col my-auto ml-1">
              <h1 class="flex text-sm font-semibold">Paijo Notonegoro</h1>
              <h1 class="flex text-xs">paijoNtng@gmail.com</h1>
