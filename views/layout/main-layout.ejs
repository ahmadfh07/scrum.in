<script>
  // JS untuk buka tutup pop-up
  const modal3 = document.querySelector('.modal3');
  const modalOpen3 = document.querySelector('.modal-open3');
  const modalClose3 = document.querySelector('.modal-close3');

  modalOpen3.addEventListener('click', function() {
    modal3.classList.remove('opacity-0', 'pointer-events-none');
    modal3.classList.add('opacity-100');
  });

  modalClose3.addEventListener('click', function() {
    modal3.classList.remove('opacity-100');
    modal3.classList.add('opacity-0', 'pointer-events-none');
  });

  //JS untuk add role2
  const roleInput3 = document.querySelector("#role-input3");
  const roleWrapperInput3 = document.querySelector("#role-wrapper-input3");
  const roleContainer3 = document.querySelector("#role-container3");
  const rolesEl3 = document.querySelector("#roles3");

  const roles3 = [1];
  loadData3();

  function loadData3() {
    let rolesHTML3 = "";
    roles3.forEach((r, i) => {
      rolesHTML3 += `<div class="flex items-center gap-y-3">
                                <input class="w-1/2 border-2 px-2 py-1.5 rounded-md mr-3" type="text" id="role-input3" name="bebas"><br /><br />
                                ${
                                  i === roles3.length - 1
                                    ? `<div class="p-2 bg-white rounded-md cursor-pointer" onclick="addRoleInput3(${i})">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="text-gray-700" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M12 5l0 14"></path>
                                        <path d="M5 12l14 0"></path>
                                    </svg>
                                </div>`
                                    : ""
                                }
                            </div>`;
    });
    rolesEl3.innerHTML = rolesHTML3;
  }

  function addRoleInput3(i) {
    roles3.push(i + 1);
    console.log(i, roles3);
    loadData3();
  }
</script>