<!-- Background Keseluruhan -->
<section class=" flex flex-row">
  <!-- Kiri -->
  <div class="flex flex-col w-1/3 relative bg-[#4B6D5F] ">
    <img class="absolute w-20 text-white font-semibold top-12 left-12" src="/assets/logo_scrumin_nt.png" alt="">
    <h1 class="absolute text-4xl text-white m-auto font-black top-64 left-1/3 -translate-x-1/3 -translate-y-1/2 items-center justify-center">CREATE YOUR ACCOUNT</h1>
    <h2 class="absolute text-sm text-white font-light top-96 left-1/3 -translate-x-1/3 -translate-y-1/2 items-center justify-center">Let's create your account and start to use our amazing feature and improve your project management quality</h2>
  </div>

  <!-- Card Container -->
  <div class="flex flex-col w-2/3 relative">
    <!-- Isi Card Container -->
    <div class="flex flex-col bg-[#DEE5D4] items-center justify-center md:h-screen">
      <!-- Form Input -->
      <div class="flex flex-col w-full pt-6 items-center space-y-4 md:space-y-2 ">
        <form action="/signup" method="post" class="pb-2 px-32 space-y-2 md:space-y-2 w-full" action="">

            <% if(success_msg!='' ) { %>
                <div class="alert alert-success">
                  <%=success_msg %>
                </div>
                <% } %>
                
                <% if(error_msg !='' ) { %>
                <div class="alert alert-warning">
                  <%= error_msg %>
                </div>
                <% } %>

          <!-- Di bawah ini dijadikan alert -->
          <%-  !errAlert ? '' : `<p class="text-red-500 text-xs italic">${errAlert}</p>` %>
          <!-- div form -->
          <div class="">
            <div class="flex flex-row w-full">
              <!-- div first name -->
              <div class="flex flex-col w-1/2 pr-4">
                <label for="fName" class="block text-gray-700 text-sm font-semibold mb-2">First Name</label>
                <input type="text" name="fName" id="fName" class="bg-white border border-white active: border-b-2  text-slate-950 sm:text-sm rounded-lg w-full p-2.5 flex-shrink flex-grow flex-auto mb-2" placeholder="" value="<%= (typeof fName != 'undefined') ? fName : null %>">
              </div>
              <!-- div last name -->
              <div class="flex flex-col w-1/2 pl-4">
                <label for="lName" class="block text-gray-700 text-sm font-semibold mb-2">Last Name</label>
                <input type="text" name="lName" id="lName" class="bg-white border border-white active: border-b-2  text-slate-950 sm:text-sm rounded-lg w-full p-2.5 flex-shrink flex-grow flex-auto mb-2" placeholder="" value="<%= (typeof lName != 'undefined') ? lName : null %>">
              </div>
            </div>
            <!-- div username -->
            <div class="flex w-full flex-col">
              <label for="username" class="block text-gray-700 text-sm font-semibold mb-2">Username</label>
              <input type="text" name="username" id="username" class="bg-white border border-white active: border-b-2  text-slate-950 sm:text-sm rounded-lg w-full p-2.5 flex-shrink flex-grow flex-auto mb-2" placeholder="" value="<%= (typeof username != 'undefined') ? username : null %>">
              <%-  !errUsername? '' : `<p class="text-red-500 text-xs italic">${errUsername}</p>` %>
            </div>
            <!-- div email -->
            <div class="flex w-full flex-col">
              <label for="email" class="block text-gray-700 text-sm font-semibold mb-2">Email</label>
              <input type="email" name="email" id="email" class="bbg-white border border-white active: border-b-2  text-slate-950 sm:text-sm rounded-lg w-full p-2.5 flex-shrink flex-grow flex-auto mb-2" placeholder="" value="<%= (typeof email != 'undefined') ? email : null %>">
              <%-  !errEmail? '' : `<p class="text-red-500 text-xs italic">${errEmail}</p>` %>
            </div>

            <!-- div pass -->
            <div class="flex w-full flex-col">
              <label for="password" class="block text-gray-700 text-sm font-semibold mb-2">Password</label>
              <div class="relative w-full">
                <div class="absolute inset-y-0 right-0 flex items-center px-2">
                    <input class="hidden js-password-toggle" id="toggle" type="checkbox" />
                    <label class="bg-white hover:bg-slate-300 rounded-2xl px-2 py-1 text-sm text-gray-600 font-mono cursor-pointer" for="toggle"><i id="js-password-label" class="fa-regular fa-eye"></i></label>
                </div>
                <input type="password" name="password" class="bg-white border border-white active: border-b-2  text-slate-950 sm:text-sm rounded-lg w-full p-2.5 flex-shrink flex-grow flex-auto mb-2 js-password" placeholder="" value="<%= (typeof password != 'undefined') ? password : null %>">
              </div>
              <%-  !errPwRequirement ? '' : `<p class="text-red-500 text-xs italic">${errPwRequirement}</p>` %>
            </div>

            <!-- div confirm pass -->
            <div class="flex w-full flex-col">
              <label for="confpass" class="block text-gray-700 text-sm font-semibold mb-2">Confirm Password</label>
              <div class="relative w-full">
                <div class="absolute inset-y-0 right-0 flex items-center px-2">
                  <input class="hidden js-confpass-toggle" id="toggle2" type="checkbox" />
                  <label class="bg-white hover:bg-slate-300 rounded-2xl px-2 py-1 text-sm text-gray-600 font-mono cursor-pointer " for="toggle2"><i id="js-confpass-label" class="fa-regular fa-eye"></i></label>
                </div>
              <input type="password" name="password2" class="bg-white border border-white active: border-b-2  text-slate-950 sm:text-sm rounded-lg w-full p-2.5 flex-shrink flex-grow flex-auto mb-4 js-confpass" placeholder="" value="<%= (typeof password2 != 'undefined') ? password2 : null %>">
              <%-  !errPwConfirm ? '' : `<p class="text-red-500 text-xs italic">${errPwConfirm}</p>` %>
            </div>

            <div class="flex items-center mx-4">
              <input id="agreement" onclick="agree()" aria-describedby="checkbox-1" type="checkbox" class="bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-4 w-4 rounded">
              <label class="text-sm ml-3 font-medium text-gray-900">By ticking, you are confirmed, understood and agree <a href="#" class="text-blue-600 hover:underline">terms and conditions</a></label>
            </div>
            <a href="">
              <button id="submit" name="submit" type="submit" class="bg-[#4B6D5F] hover:bg-[#60947e] md:h-10 text-center items-center md:px-4 md:py-1 md:text-lg sm:text-xs sm:h-6 text-white rounded-xl leading-tight mt-4 mb-2 w-full">Sign Up</button>
            </a>
          </div>
        </form>
      </div>
      <h1 class="text-sm mt-8 font-medium text-gray-900">Already have an account? <a href="/signin" class="text-blue-600 hover:underline">Sign In</a></h1>
    </div>
  </div>
</section>

<script>
  document.getElementById("submit").disabled = true;

  function agree() {
    if (document.getElementById('agreement').checked) {
      document.getElementById("submit").disabled = false;
    } else {
      document.getElementById("submit").disabled = true;
    }
  }

//   Password
  const passwordToggle = document.querySelector('.js-password-toggle')
  passwordToggle.addEventListener('change', function() {
    const password = document.querySelector('.js-password'),
      passwordLabel = document.querySelector('.js-password-label')

    if (password.type === 'password') {
      password.type = 'text'
      passwordLabel.className = 'fa fa-eye-slash'
    } else {
      password.type = 'password'
      passwordLabel.className = 'fa-reguler fa-eye'
    }
    password.focus()
  })

//   Confirm Password
  const confPasswordToggle = document.querySelector('.js-confpass-toggle')
  confPasswordToggle.addEventListener('change', function() {
    const confPass = document.querySelector('.js-confpass'),
      confPassLabel = document.querySelector('.js-confpass-label')

    if (confPass.type === 'password') {
        confPass.type = 'text'
        confPassLabel.className = 'fa fa-eye-slash'
    } else {
        confPass.type = 'password'
        confPassLabel.className = 'fa-reguler fa-eye'
    }
    confPass.focus()
  })
</script>